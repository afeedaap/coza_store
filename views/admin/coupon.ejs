<script>
  async function deleteCoupon(couponId) {
    try {
        const confirmation = await Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        });

        if (confirmation.isConfirmed) {
            const response = await fetch('/admin/deleteCoupon', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ couponId })
            });

            const data = await response.json();
            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: 'Coupon deleted successfully',
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = '/admin/coupon';
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to delete coupon'
                });
            }
        }
    } catch (error) {
        console.error('Error deleting coupon:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: 'Failed to delete coupon'
        });
    }
}

    function openEditModal(couponId, couponName, couponCode, discountAmount, minimumAmount, startDate, expireDate) {
    document.getElementById('edit_coupon_name').value = couponName;
    document.getElementById('edit_coupon_code').value = couponCode;
    document.getElementById('edit_min_amount').value = minimumAmount;
    document.getElementById('edit_discount_amount').value = discountAmount;
    // Set the start date value
   

    document.getElementById('edit_coupon_id').value = couponId;
}
function validateEditCouponForm(index) {
    var couponName = document.getElementById(`edit_coupon_name_${index}`).value;
    var couponCode = document.getElementById(`edit_coupon_code_${index}`).value;
    var minAmount = document.getElementById(`edit_min_amount_${index}`).value;
    var discount = document.getElementById(`edit_discount_amount_${index}`).value;
    
    var isValid = true;

    if (couponName.trim() === "") {
        document.getElementById(`edit_couponNameErr_${index}`).innerHTML = "Coupon Name is required";
        isValid = false;
    } else {
        document.getElementById(`edit_couponNameErr_${index}`).innerHTML = "";
    }

    if (couponCode.trim() === "") {
        document.getElementById(`edit_couponCodeErr_${index}`).innerHTML = "Coupon Code is required";
        isValid = false;
    } else {
        document.getElementById(`edit_couponCodeErr_${index}`).innerHTML = "";
    }

    if (minAmount.trim() === "") {
        document.getElementById(`edit_minAmountErr_${index}`).innerHTML = "Minimum Amount is required";
        isValid = false;
    } else if (isNaN(minAmount) || minAmount <= 0) {
        document.getElementById(`edit_minAmountErr_${index}`).innerHTML = "Minimum Amount must be a positive number";
        isValid = false;
    } else {
        document.getElementById(`edit_minAmountErr_${index}`).innerHTML = "";
    }

    if (discount.trim() === "") {
        document.getElementById(`edit_discountErr_${index}`).innerHTML = "Discount Amount is required";
        isValid = false;
    } else if (isNaN(discount)) {
        document.getElementById(`edit_discountErr_${index}`).innerHTML = "Discount Amount must be a number";
        isValid = false;
    } else if (discount > 60) {
        document.getElementById(`edit_discountErr_${index}`).innerHTML = "Discount must be less than or equal to 60";
        isValid = false;
    } else {
        document.getElementById(`edit_discountErr_${index}`).innerHTML = "";
    }

    return isValid;
}
document.getElementById('couponForm').addEventListener('submit', function(event) {
    event.preventDefault();

    if (!validateForm()) {
        return;
    }

    var xhr = new XMLHttpRequest();

    xhr.onload = function() {
        if (xhr.status === 400) {
            var errors = JSON.parse(xhr.responseText).errors;
            if (errors.couponName) {
                iziToast.error({
                    title: 'Error',
                    message: errors.couponName
                });
            }
            if (errors.couponCode) {
                iziToast.error({
                    title: 'Error',
                    message: errors.couponCode
                });
            }
            // Handle other validation errors if needed
        } else if (xhr.status === 500) {
            iziToast.error({
                title: 'Error',
                message: 'Internal server error. Please try again later.'
            });
        } else {
            iziToast.success({
                title: 'Success',
                message: 'Coupon updated successfully'
            });
            window.location.href = '/admin/coupon';
        }
    };

    xhr.onerror = function() {
        iziToast.error({
            title: 'Error',
            message: 'An error occurred during the request. Please try again.'
        });
    };

    xhr.open('POST', this.action, true); // Open the XHR request
    xhr.setRequestHeader('Content-Type', 'application/json;charset=UTF-8');

    var formData = new FormData(this);
    var jsonObject = {};
    formData.forEach(function(value, key) {
        jsonObject[key] = value;
    });

    xhr.send(JSON.stringify(jsonObject)); // Send the XHR request with JSON data
});

</script>
