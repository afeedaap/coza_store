                      <%#});%>
                    </tbody>
                  </table>
                </div>

              </div>
            </div><!-- End Top Selling -->
             <!-- Top Selling Product Category-->
             <div class="col-12">
              <div class="card top-selling overflow-auto">
                <div class="card-body pb-0">
                  <h5 class="card-title"><a href="#">Top Selling Categories</a> </h5>
                  <table class="table table-borderless">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Category</th>
                        <th scope="col">Sold</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%# topCategory.forEach((category,index) => { %>
                        <tr>
                          <td><%#= index +1 %> </td>
                          <td ><%#= category.category%> </td>
                          <td><%#= category.totalSold %> </td>
                        </tr>
                      <%#});%>
                    </tbody>
                  </table>
                </div>

              </div>
            </div><!-- End Top Selling Category-->


          </div>
        </div><!-- End Left side columns -->

        <!-- Right side columns -->
        <div class="col-lg-4">

          <!-- Recent Activity -->
          <div class="card">
           
            <div class="card-body">
              <h5 class="card-title">View Sales </h5>
              <div class="form-body">
                <form class="form-horizontal" action="/admin/salesReport" method="POST"> 
                    <div class="form-group"> 
                        <div class="col-sm-9"> <select name="timeRange" id="" class="form-control">                                
                                    <option value="daily">Daily</option>
                                    <option value="weekly">Weekly</option>
                                    <option value="yearly">Yearly</option>
                        </select></div> 
                    </div>                                                                            
                    <div class="col-sm-offset-3"> 
                        <button type="submit" class="btn btn-default card-title">Sumbit</button> 
                    </div> 
                </form>                
            </div>
            <div class="form-body">
              <form class="form-horizontal" action="/admin/salesOnDate" method="POST"> 
                  <div class="form-group"> 
                      <label for="startDate" class="col-form-label"><strong>Start Date</strong></label> 
                      <div class="col-sm-9">
                          <input type="date" name="fromDate" class="form-control">
                      </div> 
                  </div>
                  <div class="form-group"> 
                      <label for="endDate" class="col-form-label"><strong>End Date</strong></label> 
                      <div class="col-sm-9">
                          <input type="date" name="toDate" class="form-control">
                      </div> 
                  </div>                                                                            
                  <div class="col-sm-offset-2"> 
                      <button type="submit" class="btn btn-default card-title">Submit</button> 
                  </div> 
              </form>                
          </div>
        </div>
      </div><!-- End Recent Activity -->

