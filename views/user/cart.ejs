<script>
   
    function removeItem(product_Id) {
        Swal.fire({
            title: "Are You Sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
            cancelButtonText: "Cancel",
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/removeCartItem",
                    data: {
                        product: product_Id,
                    },
                    method: "post",
                    success: (response) => {
                        if (response.success) {
                            Swal.fire({
                                title: "Deleted!",
                                text: "Your item has been deleted.",
                                icon: "success",
                                timer: 1500,
                                showConfirmButton: false,
                            }).then(() => {
                                location.reload();
                            });
                        }
                    },
                });
            }
        });
    }
    
    $(document).ready(function() {
        // Event listener for decrement button
        $(document).on('click', '.btn-decrement', function() {
            const productId = $(this).siblings(".quantity-input").attr("id").split("_")[1];
            updateQuantity(productId, -1);
        });

        // Event listener for increment button
        $(document).on('click', '.btn-increment', function() {
            const productId = $(this).siblings(".quantity-input").attr("id").split("_")[1];
            updateQuantity(productId, 1);
        });
    });

    function updateQuantity(productId, increment) {
    var quantityInput = $("#cartProductQuantity_" + productId);
    var currentValue = parseInt(quantityInput.val());
    var newValue = currentValue + increment;

    if (newValue < 1) {
        return;
    }

    quantityInput.val(newValue);
    updateCart(productId, increment, newValue); // Pass the new quantity to the updateCart function
}
   // Function to update cart via AJAX
   function updateCart(productId, newQuantity) {
        const data = { productId: productId, count: newQuantity };

    $.ajax({
        method: 'POST',
        url: '/update-cart',
        data: JSON.stringify(data),
        contentType: 'application/json',
        success: function (response) {
            console.log(response);
            if (response.stock) {
                // Handle out of stock scenario
                Swal.fire({
                    text: "Product is out of stock. Will update soon!",
                    icon: "warning",
                });
                $(".btn-increment").prop("disabled", true);
                location.reload(); // Reload the page
            } else if (response.limit) {
                // Handle quantity limit scenario
                Swal.fire({
                    icon: "warning",
                    text: "You can buy only 5 pieces at a time"
                }).then(() => {
                    $(".btn-increment").prop("disabled", true);
                    // location.reload(); // Reload the page
                });
            } else {
                // Update UI elements with new data
                var quantityInput = $("#cartProductQuantity_" + productId);
                quantityInput.val(response.newQuantity);

                var totalPriceElement = $("#totalprice" + productId);
                totalPriceElement.text(response.newTotalPrice.toFixed(2));

                // Update subtotal, shipping charge, and grand total if needed
                $("#subtotal span").text("$" + response.newSubTotal.toFixed(2));
                $("#shippingCharge span").text("$" + response.newShippingCharge.toFixed(2));
                $("#grandtotal span").text("$" + response.newGrandTotal.toFixed(2));
            }
        },
        error: function (error) {
            console.error(error);
            Swal.fire("Error", "An error occurred while updating the cart. Product quantity exceeded", "error");
        }
    });
}

    </script>
    

