<div class="main-wrapper">

    <!-- Cart Page Start -->
    <div class="cart_area pt--120 pb--80 bg-color pt_md--80 pt_sm--80" data-bg-color="#ffffff">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form>
                        <!-- Cart Table -->
                        <div class="cart-table table-responsive mb--40">
                            <table class="table" id="reloadArea">
                                <thead>
                                    <tr>
                                        <th class="pro-thumbnail">Image</th>
                                        <th class="pro-title">Product</th>
                                        <th class="pro-price">Price</th>
                                        <th class="pro-quantity">Quantity</th>
                                        <th class="pro-subtotal">Total</th>
                                        <th class="pro-remove">Remove</th>
                                    </tr>
                                </thead>
                                <tbody id="carttable">
                                    <% if (cart && cart.products && cart.products.length > 0) { %>
                                        <% cart.products.forEach((product, i) => { %>
                                            <% if (product.productId) { %>
                                                <tr>
                                                    <td class="pro-thumbnail">
                                                        <% if (product.productId.images && product.productId.images.length > 0) { %>
                                                            <img src="/<%= product.productId.images[0] %>" alt="Product" style="width: 50px; height: 60px;">
                                                        <% } else { %>
                                                            <img src="/placeholder-image.jpg" alt="Placeholder Image" style="width: 50px; height: 60px;">
                                                        <% } %>
                                                    </td>
                                                    <td class="pro-title">
                                                        <%= product.productId.name %>
                                                    </td>
                                                    <% if (product.productId.offerprice === product.productId.productPrice) { %>
                                                        <td class="column-2" id="productPrice_<%= i %>"><%= product.productPrice %> </td>
                                                    <% } else { %>
                                                        <td class="column-2" id="productPrice_<%= i %>">
                                                            <span><del><%= product.productId.productPrice %></del></span>
                                                            <span class="fw-bold"><%= product.productId.offerprice %></span>
                                                        </td>
                                                    <% } %>
                                                    <td class="pro-quantity">
                                                        <div class="cart-product-quantity">
                                                            <button class="btn btn-decrement" type="button">-</button>
                                                            <input type="text" id="cartProductQuantity_<%= product.productId._id %>" class="form-control quantity-input" value="<%= product.count %>" min="1" max="<%= product.quantity %>" readonly>
                                                            <button class="btn btn-increment" type="button">+</button>
                                                        </div>
                                                    </td>
                                                    <% if (product.productId.offerprice === product.productId.productPrice) { %>
                                                        <td class="column-4" id="pricePerItem_<%= i %>"><%= product.productId.productPrice*product.count %></td>
                                                    <% } else { %>
                                                        <td class="column-4" id="pricePerItem_<%= i %>">
                                                            <!-- <span><del><%#= product.productId.productPrice * product.count%></del></span> -->
                                                            <span class="fw-bold"><%= product.productId.offerprice * product.count %></span>
                                                        </td>
                                                    <% } %>
                                                    <td>
                                                        <button type="button" onclick="removeItem('<%= product.productId._id %>')">
                                                            <i class="fa fa-trash-o"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6">
                                                <% if (message) { %>
                                                    <%= message %>
                                                <% } else { %>
                                                    No products available
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
    
                <div class="row">
                    <div class="col-lg-6 col-12 mb--15">
                        <!-- Calculate Shipping -->
                        <div class="calculate-shipping">
                            <form action="#">
                                <div class="row">
                                    <div class="col-md-6 col-12 mb--25"></div>
                                    <div class="col-md-6 col-12 mb--25"></div>
                                    <div class="col-md-6 col-12 mb--25"></div>
                                </div>
                            </form>
                        </div>
                        <!-- Discount Coupon -->
                    </div>
    
                    <!-- Cart Summary -->
                    <div class="col-lg-6 col-12 mb--40 d-flex">
                        <div class="cart-summary" style="margin-left: 250px;">
                            <div class="cart-summary-wrap">
                                <h4>Cart Summary</h4>
                                <% if (cart && cart.products && cart.products.length > 0 && subTotal > 0) { %>
                                    <p id="subtotal">Sub Total <span>₹<%= subTotal %>.00</span></p>
                                    <% let totalDiscount = 0; %>
                                    <% cart.products.forEach(product => { %>
                                        <% if (product.offerPrice && product.offerPrice < product.productId.price) { %>
                                            <% totalDiscount += (product.productId.price - product.offerPrice) * product.count; %>
                                        <% } %>
                                    <% }); %>
                                    <h2 id="grandtotal">Grand Total <span>₹<%= grandTotal - totalDiscount %>.00</span></h2>
                                <% } else { %>
                                    <p>Sub Total <span>₹0.00</span></p>
                                    <h2>Grand Total <span>₹0.00</span></h2>
                                <% } %>
                            </div>
                            <div class="cart-summary-button" style="margin-top: 20px;">
                                <button class="checkout-btn" id="checkout" type="submit"><a href="/checkout">Checkout</a></button>
                            </div>
                        </div>
                    </div>
                </div>
